<div class="d-flex justify-content-center bg-light p-3", style="max-width: 1000px; margin: 0 auto;" >
  <%= form_with url: posts_new_path, model: @posts, local: true do |form|%>
    <div class="form-group">
      <%= form.label :Título %>
      <%= form.text_field :title, class: "form-control form-control-lg" %>
      <% if @posts.errors.messages[:title].present? && @posts.errors.messages[:title].include?("is too short (minimum is 5 characters)") %>
        <p style="color: red;">El título debe tener al menos 5 caracteres</p>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :Bajada %>
      <%= form.text_area :body, class: "form-control form-control-lg"  %>
    </div>

    <div class="form-group">
      <%= form.label :Texto %>
      <%= form.text_area :text, class: "form-control form-control-lg"%>
    </div>
    
    <div class="form-group">
      <%= form.label :Autor %>
      <%= form.text_field :author, class: "form-control form-control-lg" %>
    </div>


     <div class="form-group">
      <%= form.label :"Url de la imagen" %>
      <%= form.text_field :image, class: "form-control form-control-lg" %>
    </div>

    <div class="text-center" style="margin-top:10px">
        <%= form.submit "Guardar post", class: "btn btn-success mx-auto" %>
    </div>
  <% end %>
</div>